<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/livingcamerabutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摄像展示"
            android:onClick="checkPermission"/>
        <Button
            android:id="@+id/cameracapturebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频录制"
            android:onClick="checkPermission"/>
        <Button
            android:id="@+id/vieocoverbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频截图OpenGL"
            android:onClick="checkPermission"/>
        <Button
            android:id="@+id/vieocoverbutton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频截图MediaMetadata"
            android:onClick="checkPermission"/>
    </LinearLayout>
</RelativeLayout>
